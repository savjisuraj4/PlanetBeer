<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".BeerFullInfo">
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="45dp"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/beerNameInFullInfo"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:fontFamily="@font/courier_prime_bold"
            android:textSize="30sp"
            android:paddingStart="10dp"
            
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/firstBrewed"
            android:layout_width="match_parent"
            android:layout_weight="0.7"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/courier_prime_bold_italic"
            android:textSize="15sp"
            android:paddingStart="10dp"
            
            android:layout_height="0dp"
            tools:ignore="RtlSymmetry" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/beerImage"
            android:layout_marginTop="25dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            app:srcCompat="@drawable/beericonrecycleview"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/courier_prime"
            android:textSize="15sp"
            android:inputType="textMultiLine"
            android:paddingStart="10dp"
            android:layout_height="wrap_content"
            tools:ignore="RtlSymmetry" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/volume"
            android:layout_width="0dp"
            android:textColor="@color/white"

            android:textAlignment="viewStart"
            android:gravity="center"
            android:layout_weight="1.3"
            android:fontFamily="@font/courier_prime"
            android:textSize="15sp"
            android:paddingStart="10dp"
            
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/abv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"

            android:textAlignment="viewStart"
            android:gravity="center"
            android:fontFamily="@font/courier_prime"
            android:textSize="15sp"
            android:paddingStart="10dp"
            
            android:layout_height="match_parent"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ibu"
                android:layout_width="0dp"
                android:textColor="@color/white"

                android:layout_weight="1.3"
                android:fontFamily="@font/courier_prime"
                android:textSize="15sp"
                android:textAlignment="viewStart"
                android:gravity="center"
                android:paddingStart="10dp"
                
                android:layout_height="match_parent"
                tools:ignore="RtlSymmetry" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ebc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"

                android:fontFamily="@font/courier_prime"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:textAlignment="viewStart"
                android:gravity="center"
                
                android:layout_height="match_parent"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/target_fg"
                android:layout_width="0dp"
                android:textColor="@color/white"

                android:layout_weight="1.3"
                android:fontFamily="@font/courier_prime"
                android:textSize="15sp"
                android:paddingStart="10dp"
                
                android:textAlignment="viewStart"
                android:gravity="center"
                android:layout_height="match_parent"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/target_og"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white"

                android:fontFamily="@font/courier_prime"
                android:paddingStart="10dp"
                android:textAlignment="viewStart"
                android:gravity="center"
                
                android:textSize="15sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/srm"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:textColor="@color/white"

                android:textAlignment="viewStart"
                android:gravity="center"
                android:fontFamily="@font/courier_prime"
                android:textSize="15sp"
                android:paddingStart="10dp"
                
                android:layout_height="match_parent"
                tools:ignore="RtlSymmetry" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ph"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"

                android:textAlignment="viewStart"
                android:gravity="center"
                android:fontFamily="@font/courier_prime"
                android:textSize="15sp"
                android:paddingStart="10dp"
                
                android:layout_height="match_parent"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/attenuation_level"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:textColor="@color/white"

                android:textAlignment="viewStart"
                android:gravity="center"
                android:fontFamily="@font/courier_prime"
                android:textSize="15sp"
                android:paddingStart="10dp"
                
                android:layout_height="match_parent"
                tools:ignore="RtlSymmetry" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/boil_volume"
                android:layout_width="0dp"
                android:textColor="@color/white"

                android:layout_weight="1"
                android:textAlignment="viewStart"
                android:gravity="center"
                android:fontFamily="@font/courier_prime"
                android:textSize="15sp"
                android:paddingStart="10dp"
                
                android:layout_height="match_parent"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ingredients"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/courier_prime"
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:layout_marginTop="25dp"
                android:paddingStart="10dp"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/food_pairing"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/courier_prime_bold_italic"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:inputType="textMultiLine"

                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/brewers_tips"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:fontFamily="@font/courier_prime_bold_italic"
                android:textSize="15sp"
                android:paddingStart="10dp"
                android:inputType="textMultiLine"

                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry" />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>